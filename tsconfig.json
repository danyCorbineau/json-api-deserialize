{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "lib": ["es6"],
    "target": "es3",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "exclude": ["dist", "node_modules"]
}